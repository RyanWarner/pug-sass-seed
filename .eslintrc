{
    "env": {
        "node": true,
        "browser": true
    },

    "rules":
    {
    	"no-cond-assign": 2,
    	"no-console": 0,
    	"no-constant-condition": 2,
    	"no-comma-dangle": 2,
    	"no-control-regex": 2, 
    	"no-debugger": 0,				// turn this on when preparing for deployment
    	"no-dupe-keys": 2,
    	"no-empty": 0,
    	"no-empty-class": 2,
    	"no-ex-assign": 2,
    	"no-extra-boolean-cast": 2,
    	"no-extra-parens": 0,
    	"no-extra-semi": 0,
    	"no-func-assign": 2,
    	"no-inner-declarations": 2,
    	"no-invalid-regexp": 2,
    	"no-negated-in-lhs": 2,

    	"block-scoped-var": 1,
    	"complexity": 0,
    	"consistent-return": 0,
    	"curly": 2,
    	"default-case": 2,
    	"dot-notation": 1,
    	"eqeqeq": 1,

    	"global-strict": [2, "always"],
    	"no-extra-strict": 2,

    	"brace-style": 0,
    	"camelcase": 2,
    	"func-style": [2, "expression"],
    	"new-cap": 2,
    	"new-parens": 2,
    	"no-spaced-func": 2,
    	"no-space-before-semi": 2,
    	"no-trailing-spaces": 1,
    	"no-underscore-dangle": 0,
    	"quotes": [1, "single"],
    	"quote-props": true,
    	"semi": [2, "always"],
    	"space-in-brackets": [2, "always"],
    	"space-in-parens": [2, "always"],
    	"space-infix-ops": 2,
    	"space-unary-word-ops": 2,

    	"no-undef": 0,
    	"block-scoped-var": 0
    }
}